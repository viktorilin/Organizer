<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_add_title_text_view" />

    <EditText
        android:id="@+id/notification_add_title_editTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_add_description_editTxt" />

    <EditText
        android:id="@+id/notification_add_description_edtText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_add_pick_time" />

    <TimePicker
        android:id="@+id/notification_add_timePicker"
        android:layout_width="wrap_content"
        android:layout_height="250dp" />

    <TextView
        android:id="@+id/notification_add_show_picked_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/notification_add_go_to_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="60"
            android:text="@string/notification_add_go_to_date_picker" />

        <Button
            android:id="@+id/notification_add_save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_weight="40"
            android:text="@string/notification_add_save_button" />
    </LinearLayout>

</LinearLayout>